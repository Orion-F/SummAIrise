{
    "manifest_version": 3,
    "name": "SummAIrise",
    "version": "1.0",
    "description": "A Chromium browser extension for summarizing webpages via AI",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "api_key.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}